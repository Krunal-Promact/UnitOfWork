@model UnitOfWorkDemo.Models.Student
@{
    ViewBag.Title = "CreateStudent";
    var action = "CreateStudent";
    if (Model.Id != 0)
    {
        action = "EditStudent";
    }
}

<h2>Create a Student</h2>

@using (Html.BeginForm(action, "Students", FormMethod.Post, new { autocomplete = "off" }))
{
    @Html.HiddenFor(m => m.Id)
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Name" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
        @Html.ValidationMessageFor(m => m.Email)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Number)
        @Html.TextBoxFor(m => m.Number, new { @class = "form-control", placeholder = "Number" })
    </div>
    <button type="submit" value="Submit" class="btn btn-success">Submit</button>
}